#!/usr/bin/expect -f
  
### rpm-sign.exp -- Sign RPMs by sending the passphrase.
   
spawn rpmbuild -ta --sign {*}$argv
expect -exact "Enter pass phrase: "
send -- "\r"
expect eof
  
foreach {pid spawnid os_error_flag value} [wait] break

if {$os_error_flag == 0} {
     puts "exit status: $value"
     exit $value
} else {
     puts "errno: $value"
     exit $value
}
